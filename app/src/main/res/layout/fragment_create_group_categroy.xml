        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="7dp"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_group6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
