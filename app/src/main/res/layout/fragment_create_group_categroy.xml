                app:layout_constraintTop_toBottomOf="@id/imageView_group6" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="7dp"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_group7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_group_unselected"
            android:paddingHorizontal="19dp"
            android:paddingVertical="18dp">

            <ImageView
                android:id="@+id/imageView_group7"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_group7_unselected"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_group7"
                style="@style/Detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group7"
                android:textColor="@color/gray_60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_group7" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="7dp"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_group8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_group_unselected"
            android:paddingHorizontal="25dp"
            android:paddingVertical="18dp">

            <ImageView
                android:id="@+id/imageView_group8"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_group8_unselected"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_group8"
                style="@style/Detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group8"
                android:textColor="@color/gray_60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_group8" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_next"
        style="@style/NextButtonGray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>