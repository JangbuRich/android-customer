<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.Onboarding4Fragment">

    <TextView
        android:id="@+id/textView_onboarding"
        style="@style/Headline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="@string/onboarding4"
        app:layout_constraintStart_toStartOf="@+id/layout_inidicator"
        app:layout_constraintTop_toBottomOf="@+id/layout_inidicator" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imageView_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_onboarding"
        app:lottie_autoPlay="true"
        app:lottie_repeatMode="restart"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/onboarding3" />

    <Button
        android:id="@+id/button_next"
        style="@style/NextButtonGray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_inidicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/indicator1"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_indicator_selected" />

        <TextView
            android:id="@+id/indicator2"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:background="@drawable/background_indicator_selected" />

        <TextView
            android:id="@+id/indicator3"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:background="@drawable/background_indicator_selected" />

        <TextView
            android:id="@+id/indicator4"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:background="@drawable/background_indicator_selected" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>